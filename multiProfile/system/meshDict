renameBoundary
{
    newPatchNames
    {
                bottomEmptyFaces
        {
            type    symmetry;
            newName symmetry1;
        }
                        topEmptyFaces
        {
            type    symmetry;
            newName symmetry2;
        }
                        "(x.*|y.*)"
        {
            type    patch;
            newName inout;
        }
    
        profile0
        {
        
            type wall;
        
            newName profile0;
        }
    
        profile1
        {
        
            type wall;
        
            newName profile1;
        }
    }
